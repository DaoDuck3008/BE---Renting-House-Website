<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link href="user.css" rel="stylesheet" />
</head>

<body>
  <!-- Header container -->
  <header class="header-container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user">User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/house">House</a>
            </li>
          </ul>
          <!-- Search form -->
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
          <!-- Login - register -->
          <form class="d-flex mx-2">
            <ul class="navbar-nav mx-2">
              <li class="nav-item">
                <button class="btn btn-success">Login</button>
              </li>
              <li class="nav-item mx-2">
                <button class="btn btn-outline-success">Register</button>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </nav>
  </header>
  <!-- Body -->
  <div class="container mt-4">
    <h2>List of Houses</h2>

    <% if (houses && houses.length> 0) { %>
      <div class="row">
        <% houses.forEach(house=> { %>
          <div class="col-md-4">
            <div class="card" style="width: 18rem;">
              <img src="<%= house.image %>" class="card-img-top" alt="<%= house.house_name %>">
              <div class="card-body">
                <h5 class="card-title">
                  <%= house.house_name %>
                </h5>
                <p class="card-text">Address: <%= house.address %>
                </p>
                <p class="card-text">Number of Rooms: <%= house.number_of_room %>
                </p>
                <a href="/house/<%= house.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
      <% } else { %>
        <p>No houses available.</p>
        <% } %>

          <h2>Create New House</h2>
          <form action="/houses" method="POST" enctype="multipart/form-data">
            <label for="house_name">House Name:</label>
            <input type="text" id="house_name" name="house_name" required><br>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required><br>

            <label for="number_of_room">Number of Rooms:</label>
            <input type="number" id="number_of_room" name="number_of_room" required><br>

            <label for="image">Image:</label>
            <input type="file" id="image" name="image" accept="image/*" required><br>

            <button type="submit">Create House</button>
          </form>

          <h2>Edit House</h2>
          <% if (house) { %>
            <form action="/houses/<%= house.id %>?_method=PUT" method="POST">
              <label for="house_name">House Name:</label>
              <input type="text" id="house_name" name="house_name" value="<%= house.house_name %>" required><br>

              <label for="address">Address:</label>
              <input type="text" id="address" name="address" value="<%= house.address %>" required><br>

              <label for="number_of_room">Number of Rooms:</label>
              <input type="number" id="number_of_room" name="number_of_room" value="<%= house.number_of_room %>"
                required><br>

              <label for="image">Image:</label>
              <input type="file" id="image" name="image" accept="image/*"><br>

              <button type="submit">Update House</button>
            </form>

            <form action="/houses/<%= house.id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <% } else { %>
              <p>No house data available for editing.</p>
              <% } %>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>