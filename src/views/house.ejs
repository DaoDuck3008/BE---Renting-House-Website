<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>House Page</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link href="user.css" rel="stylesheet" />
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user">User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/house">House</a>
            </li>
          </ul>
          <!-- Search form -->
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
          <!-- Login - register -->
          <form class="d-flex mx-2">
            <ul class="navbar-nav mx-2">
              <li class="nav-item">
                <button class="btn btn-success">Login</button>
              </li>
              <li class="nav-item mx-2">
                <button class="btn btn-outline-success">Register</button>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </nav>
  </header>
  <div class="container mt-4">
    <h1>
      <%= house.house_name %>
    </h1>
    <img src="<%= house.image %>" alt="<%= house.house_name %>" class="img-fluid">
    <p><strong>Address:</strong>
      <%= house.address %>
    </p>
    <p><strong>Number of Rooms:</strong>
      <%= house.number_of_room %>
    </p>
    <p><strong>Average Rate:</strong>
      <%= house.average_rate %>
    </p>

    <h3>Rooms:</h3>
    <ul>
      <% house.rooms.forEach(room=> { %>
        <li>
          <p><strong>Room:</strong>
            <%= room.name %>
          </p>
          <p><strong>Area:</strong>
            <%= room.area %> sqm
          </p>
          <p><strong>Cost:</strong>
            <%= room.cost %> VND
          </p>
          <p><strong>Utilities:</strong>
            <%= room.utilities %>
          </p>
          <p><strong>Description:</strong>
            <%= room.description %>
          </p>
          <p><strong>Average Rate:</strong>
            <%= room.average_rate %>
          </p>
        </li>
        <% }) %>
    </ul>

    <h3>Comments:</h3>
    <ul>
      <% house.rooms.forEach(room=> { %>
        <% room.comments.forEach(comment=> { %>
          <li>
            <p><strong>Rater:</strong>
              <%= comment.rater_id %>
            </p>
            <p><strong>Rating:</strong>
              <%= comment.rating %>
            </p>
            <p><strong>Description:</strong>
              <%= comment.description %>
            </p>
          </li>
          <% }) %>
            <% }) %>
    </ul>

    <!-- Add comment form -->
    <h3>Leave a Comment:</h3>
    <form action="/houses/<%= house.id %>/comments" method="POST">
      <input type="hidden" name="rater_id" value="<%= userId %>"> <!-- userId là ID người dùng hiện tại -->
      <label for="rating">Rating:</label>
      <input type="number" id="rating" name="rating" min="1" max="5" required><br>

      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea><br>

      <button type="submit" class="btn btn-primary">Submit Comment</button>
    </form>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>